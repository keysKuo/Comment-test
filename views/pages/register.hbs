<link rel="stylesheet" href="css/register.css">

<div class="center-box">
    <form class="form" method="POST">
    <p class="title">Register </p>
    <p class="message">Signup now and get full access to our app. </p>
        <div class="flex">
        <label>
            <input name="firstname" required="" placeholder="" type="text" class="input">
            <span>Firstname</span>
        </label>

        <label>
            <input name="lastname" required="" placeholder="" type="text" class="input">
            <span>Lastname</span>
        </label>
    </div>  
            
    <label>
        <input name="email" required="" placeholder="" type="email" class="input">
        <span>Email</span>
    </label> 
        
    <label>
        <input name="password" required="" placeholder="" type="password" class="input">
        <span>Password</span>
    </label>
    <label>
        <input name="confirm_password" required="" placeholder="" type="password" class="input">
        <span>Confirm password</span>
    </label>
    <button class="submit">Submit</button>
    <p class="signin">Already have an acount ? <a href="#">Signin</a> </p>
</form>
</div>